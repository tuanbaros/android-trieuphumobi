<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_splash"
    android:orientation="vertical"
    android:weightSum="1">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.4">

        <ImageView
            android:id="@+id/imgHelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/icon_help" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_altp" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvHello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvName"
            android:layout_centerHorizontal="true"
            android:text="Xin chào"
            android:textColor="#F9C000"
            android:textSize="18sp"
            android:textStyle="italic"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.6">

        <RelativeLayout
            android:id="@+id/Rlayout_Choithu"
            android:layout_width="240dp"
            android:layout_height="75dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/select_btn_start"></RelativeLayout>

        <FrameLayout
            android:id="@+id/FrameLayout1"
            android:layout_width="205dp"
            android:layout_height="56dp"
            android:layout_alignEnd="@+id/Rlayout_Choithu"
            android:layout_alignRight="@+id/Rlayout_Choithu"
            android:layout_below="@+id/Rlayout_Choithu"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp">


            <com.facebook.login.widget.LoginButton
                android:id="@+id/login_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="30dp"
                android:visibility="gone" />
        </FrameLayout>

        <Button
            android:id="@+id/fb"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:layout_alignEnd="@+id/Rlayout_Choithu"
            android:layout_alignRight="@+id/Rlayout_Choithu"
            android:layout_alignTop="@+id/FrameLayout1"
            android:layout_gravity="center"
            android:background="@drawable/select_btn_login"
            android:onClick="onClick"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTurn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:text="Lượt chơi còn lại : 5"
            android:textColor="@color/white" />

    </RelativeLayout>
</LinearLayout>