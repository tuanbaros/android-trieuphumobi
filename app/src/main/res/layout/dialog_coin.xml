<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/help_call_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvCoin"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/bgr"
        android:padding="5dp"
        android:textStyle="bold"
        android:text="@string/coin"
        android:textColor="@color/white"
        android:textSize="14sp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/imagespacecall2"
        android:id="@+id/rlngang"
       >
    </RelativeLayout>
    <LinearLayout
        android:background="@color/bgr"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/rl_C"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"> <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Có"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#ffea00"/></RelativeLayout>
        <RelativeLayout

            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/imagespacecall1"
           >

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_K"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"> <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Không"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"

            android:textSize="16sp"
            android:textColor="#ffffff"/></RelativeLayout>
        <RelativeLayout
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/imagespacecall1"
           >

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_Card"

            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thẻ cào"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"

                android:textSize="16sp"
                android:textColor="#ffffff"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>