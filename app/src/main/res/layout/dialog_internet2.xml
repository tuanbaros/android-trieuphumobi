<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="250dp"
    android:background="@drawable/help_call_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#7f000000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="40dp"
                android:text="Không có kết nối Internet"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="bold"
                android:id="@+id/tv_Answer"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="35dp"
                android:text="Vui lòng kiểm tra lại"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="bold"
                android:id="@+id/textView14"
                android:layout_gravity="center"/>

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="1dp"
                android:background="@drawable/imagespacecall2"
                android:layout_marginTop="10dp">
            </RelativeLayout>



            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/Rlayout_OFF">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CHƠI OFFLINE"
                    android:id="@+id/textView40"
                    android:layout_centerInParent="true"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#ffea00"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="1dp"
                android:background="@drawable/imagespacecall2"
                android:layout_marginTop="10dp">
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/Rlayout_EXIT">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="THOÁT"
                    android:id="@+id/textView30"
                    android:layout_centerInParent="true"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#ffea00"/>
            </RelativeLayout>



        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
