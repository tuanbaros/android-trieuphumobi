<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/Rlayout_goidien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_marginTop="108dp"
            android:background="@drawable/help_call_bg"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <RelativeLayout
                android:id="@+id/rldoc"
                android:layout_width="1dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/imagespacecall1"></RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlngang1"
                android:layout_width="380dp"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/imagespacecall2"></RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/rlngang1"
                android:layout_toEndOf="@+id/rldoc"
                android:layout_toRightOf="@+id/rldoc">

                <ImageView
                    android:id="@+id/imgGiaovien"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_giaovien" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imgGiaovien"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="Giáo viên"
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/relativeLayout"
                android:layout_toLeftOf="@+id/rldoc"
                android:layout_toStartOf="@+id/rldoc">

                <ImageView
                    android:id="@+id/imgBacsi"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_bacsi" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imgBacsi"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="Bác sĩ"
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/rlngang1"
                android:layout_toLeftOf="@+id/rldoc"
                android:layout_toStartOf="@+id/rldoc">

                <ImageView
                    android:id="@+id/imgKisu"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_kisu" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imgKisu"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="Kĩ sư"
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/rlngang1"
                android:layout_toEndOf="@+id/rldoc"
                android:layout_toRightOf="@+id/rldoc">

                <ImageView
                    android:id="@+id/imgPhongvien"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_phongvien" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imgPhongvien"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="Phóng viên"
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Rl_title"
            android:layout_width="200dp"
            android:layout_height="36dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"
            android:background="@drawable/bg_btn_help">

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Ý KIẾN CHUYÊN GIA"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:textStyle="bold" />


        </RelativeLayout>

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/btn_call" />

    </RelativeLayout>

    <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/Rlayout_tuvan"
       android:visibility="gone">

       <RelativeLayout
           android:id="@+id/rl_ykien"
           android:layout_width="match_parent"
           android:layout_height="350dp"
           android:background="@drawable/help_call_bg"
           android:layout_marginTop="108dp"
           android:layout_marginLeft="20dp"
           android:layout_marginRight="20dp">

           <RelativeLayout
               android:layout_width="380dp"
               android:layout_height="1dp"
               android:layout_centerVertical="true"
               android:layout_centerHorizontal="true"
               android:background="@drawable/imagespacecall2"
               android:id="@+id/rlngang">
           </RelativeLayout>

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_above="@+id/rlngang"
               android:layout_centerHorizontal="true">

               <ImageView
                   android:layout_width="60dp"
                   android:layout_height="60dp"
                   android:id="@+id/imgAvaTuvan"
                   android:layout_centerVertical="true"
                   android:layout_centerHorizontal="true"
                   android:src="@drawable/icon_giaovien_2"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Giáo viên"
                   android:textColor="#ffffff"
                   android:textSize="15sp"
                   android:textStyle="bold"
                   android:id="@+id/tvNameTuvan"
                   android:layout_below="@+id/imgAvaTuvan"
                   android:layout_centerHorizontal="true"
                   android:layout_marginTop="5dp"/>
           </RelativeLayout>

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_below="@+id/rlngang"
               android:layout_centerHorizontal="true">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Theo tôi đáp án đúng là"
                   android:textColor="#ffffff"
                   android:textSize="18sp"
                   android:textStyle="bold"
                   android:id="@+id/textView26"
                   android:layout_alignParentTop="true"
                   android:layout_centerHorizontal="true"
                   android:layout_marginTop="40dp"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="A"
                   android:textStyle="bold"
                   android:textColor="#D69116"
                   android:textSize="42sp"
                   android:id="@+id/tvDapanDung"
                   android:layout_below="@+id/textView26"
                   android:layout_centerHorizontal="true"
                   android:layout_marginTop="10dp"/>
           </RelativeLayout>

       </RelativeLayout>

       <RelativeLayout
           android:id="@+id/Rlayout_Close"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:layout_below="@id/rl_ykien"
           android:background="@drawable/help_call_bg"
           android:layout_marginTop="20dp"
           android:layout_marginLeft="20dp"
           android:layout_marginRight="20dp">


           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="ĐÓNG"
               android:id="@+id/textView24"
               android:layout_centerVertical="true"
               android:layout_centerHorizontal="true"
               android:textStyle="bold"
               android:textSize="20sp"
               android:textColor="#ffffff"/>
       </RelativeLayout>

       <RelativeLayout
           android:layout_width="200dp"
           android:layout_height="36dp"
           android:id="@+id/Rl_title1"
           android:background="@drawable/bg_btn_help"
           android:layout_alignParentTop="true"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="90dp">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Ý KIẾN CHUYÊN GIA"
               android:textSize="15sp"
               android:textStyle="bold"
               android:textColor="#ffffff"
               android:id="@+id/textView231"
               android:layout_centerVertical="true"
               android:layout_centerHorizontal="true" />

       </RelativeLayout>

       <ImageView
           android:layout_width="70dp"
           android:layout_height="70dp"
           android:id="@+id/imageView111"
           android:layout_alignParentTop="true"
           android:layout_centerHorizontal="true"
           android:src="@drawable/btn_call"/>
   </RelativeLayout>


</RelativeLayout>